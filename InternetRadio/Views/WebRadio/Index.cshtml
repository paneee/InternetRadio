@model InternetRadio.Models.InternetRadioViewModel


<form asp-action="Action">
    <div class="text-center m-5">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td colspan="2"> @Html.DropDownListFor(x => x.SelectetRadio, new SelectList(Model.WebRadios, "Value", "Text"), "Wybierz stację", new { @class = "btn btn-lg btn-info btn-block" })</td>
                </tr>
                <tr>
                    <td><input type="submit" name="submit" value="Play" class="btn btn-primary btn-lg btn-block" /></td>
                    <td><input type="submit" name="submit" value="Stop" class="btn btn-danger btn-lg btn-block" /></td>
                </tr>
                <tr>
                    <td><input type="submit" name="submit" value="Volume-" class="btn btn-success btn-lg btn-block" /></td>
                    <td><input type="submit" name="submit" value="Volume+" class="btn btn-success btn-lg btn-block" /></td>
                </tr>
                <tr>
                    <td><input type="submit" name="submit" value="Volume--" class="btn btn-success btn-lg btn-block" /></td>
                    <td><input type="submit" name="submit" value="Volume++" class="btn btn-success btn-lg btn-block" /></td>
                </tr>
            </tbody>
        </table>
    </div>
</form>
